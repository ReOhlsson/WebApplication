@*@{
        ViewBag.Title = "Home Page";
    }*@
@model WebApplication.Models.ViewModels.IndexHomeVM

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">

    <div id="day-container">
        <nav id="navday">
            <a href="#" id="menu-days-icon"></a>
            <ul class="menudays">
                @foreach (var item in Model.listOfDays)
                {
                    <li><a class="showDayShow" value ="@item.Date.ToShortDateString()">@item.Day @item.Date.ToShortDateString()</a></li>
                }
                
            </ul>
        </nav>
    </div>

    <div class="showContainer">
        @Html.Partial("Shows")
    </div>
    <div id="programPopup">
    </div>
</div>