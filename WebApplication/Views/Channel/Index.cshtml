@model WebApplication.Models.ViewModels.IndexHomeVM
<div class="row" id="rowDays">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <ul class="nav navbar-nav menudays_channel">
                @Html.Action("ShowDays", "Channel")
            </ul>
        </div>
    </nav>
</div>
@foreach (var item in Model.ProgramJsonList)
{
    <div class="row channel">
        <div class="col-lg-2">
            <img src="~/images/300.png" alt="Alternate Text" style="width:100%;" />
        </div>
        <div class="col-lg-10">
            <ul>
                <li>
                    <div>
                        <h4>@item.title.sv</h4>
                        <p>@item.desc.sv</p>
                        @if (item.credits.actor.Count != 0 || item.credits.director.Count != 0 || item.credits.writer.Count != 0)
                        { <input type='checkbox' style='display: none' id=@item.start class="channelShowMore">
                            <label for=@item.start>Visa</label>}
                        <div class="row showmore">
                            <div class="col-lg-4">
                                <div class="actors">
                                    <h4>Skådespelare</h4>
                                    @foreach (var a in item.credits.actor)
                                    {
                                        <p>@a.name</p>
                                    }
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="actors">
                                    <h4>Regissör</h4>
                                    @foreach (var a in item.credits.director)
                                    {
                                        <p>@a.name</p>
                                    }
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="actors">
                                    <h4>Manusförfattare</h4>
                                    @foreach (var a in item.credits.writer)
                                    {
                                        <p>@a.name</p>
                                    }
                                </div>
                            </div>
                        </div>

                    </div>
                </li>
            </ul>
        </div>
    </div>
    <br />
}
<link href="~/Content/EachChannel.css" rel="stylesheet" type="text/css" />





